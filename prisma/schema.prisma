datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model Snippet {
  id        String   @id @default(uuid())
  name      String
  lang      String
  desc      String   
  file      String   
  tags      String[]
  code      String
  createdAt DateTime @default(now())
}

